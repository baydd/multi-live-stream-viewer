{
  "name": "livestream-dashboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run frontend\" \"npm run backend\"",
    "dev": "npm run start",

    "frontend": "npm --prefix frontend start",
    "backend": "npm --prefix backend start",

    "build": "npm --prefix frontend build",
    "test": "npm --prefix frontend test",

    "install:frontend": "npm --prefix frontend install",
    "install:backend": "npm --prefix backend install",
    "install:all": "npm install && npm run install:frontend && npm run install:backend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
